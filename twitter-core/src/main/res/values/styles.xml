<resources>
    <style name="tw__Button">
        <item name="android:background">@drawable/tw__login_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tw__login_btn_text_size</item>
        <item name="android:textColor">@color/tw__solid_white</item>
        <item name="android:paddingLeft">@dimen/tw__login_btn_left_padding</item>
        <item name="android:paddingRight">@dimen/tw__login_btn_right_padding</item>
    </style>

    <style name="tw__Button.Light">
        <item name="android:background">@drawable/tw__login_btn_light</item>
        <item name="android:textColor">@drawable/tw__login_btn_text_color_light</item>
    </style>

    <!-- TODO: Rename contact related resources -->
    <style name="tw__ButtonBar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="tw__Permission_Container">
        <item name="android:paddingLeft">@dimen/tw__padding_permission_horizontal_container</item>
        <item name="android:paddingRight">@dimen/tw__padding_permission_horizontal_container</item>
        <item name="android:paddingTop">@dimen/tw__padding_permission_vertical_container</item>
        <item name="android:paddingBottom">@dimen/tw__padding_permission_vertical_container</item>
    </style>

    <style name="tw__Permission_Description">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/tw__permission_description_text_size</item>
    </style>

    <style name="tw__Permission_Title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/tw__permission_title_text_size</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>
</resources>
